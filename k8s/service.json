{
  "apiVersion": "v1",
  "kind": "Service",
  "metadata": {
    "name": "netrin-openldap-service"
  },
  "spec": {
    "selector": {
      "app": "netrin-openldap-server"
    },
    "type": "NodePort",
    "ports":[
      {
        "port": 389,
        "name": "ldap",
        "protocol": "TCP",
        "nodePort": 30389,
        "targetPort": 389
      },
      {
        "port": 636,
        "name": "ldaps",
        "protocol": "TCP",
        "nodePort": 30636,
        "targetPort": 636
      }
    ]
  }
}
