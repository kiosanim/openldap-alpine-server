{
	"apiVersion": "v1",
	"kind": "PersistentVolume",
	"metadata": {
		"name": "pv-netrin-001",
		"namespace": "netrin",
		"labels": {
			"role": "pv-netrin-001"
		}
	},
	"spec": {
		"capacity": {
			"storage": "500Mi"
		},
		"accessModes": [
			"ReadWriteOnce"
		],
		"persistentVolumeReclaimPolicy": "Delete",
		"hostPath": {
			"path": "/opt/k8s-volumes/netrin/pv-netrin-001"
		}
	}
}